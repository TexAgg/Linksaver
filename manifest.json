{
	"name": "Linksaver",
	"description": "Saves highlighted text to a file.",
	"version": "1.2.0",
	"applications": {
		"gecko": {
			"id": "Linksaver@mattgaikema.com",
			"strict_min_version": "57.0"
		}
	},
	"permissions": [
		"contextMenus", 
		"downloads", 
		"tabs",
		"storage"
	],
	"background": {"scripts": ["dist/bundle.js"]},
	"manifest_version": 2,
	"icons": {
		"64": "img/ico.png"
	},
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	}
  }